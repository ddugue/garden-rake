require '../lib/rake/garden'
include Rake::Garden

task :booty do
  puts "BOOTY"
end

chore :bam => ["copy/*.txt"] do |t|
  puts "Testing chore"
  t.files.each do |f|
    b = 2
    puts f if t.has_changed f
    cp f, "sub/%f.2.txt"
    sh "sleep 5 && echo 'DAN'"
  end
end

chore :test => [:bam] do |t|
  puts t.files

  t.files.each do |f|
    puts "File changed #{f}"
  end
end
