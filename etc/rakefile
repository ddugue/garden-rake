require '../lib/rake/garden'
include Rake::Garden

task :booty do
  puts "BOOTY"
end

chore :bam => ["copy/*.txt"] do |t|
  puts "Testing chore"
  t.files.each do |f|
    cp f, "sub/%f.2.txt"
    sh "sleep 5 && echo 'DAN'"
    sh "echo 'Oops' && exit 1"
    cd "sub"
    sh "cat 7.txt.2.txt"
    cd ".."
  end
end

chore :test => [:bam] do |t|

  t.files.each do |f|
    puts "File changed #{f}"
  end
end
